@{   

    ViewBag.Title = string.IsNullOrEmpty(LojaCorp.Control.Company._Company.Title) ? LojaCorp.Control.Company._Company.NameStore : LojaCorp.Control.Company._Company.Title;
    Layout = "~/Views/Shared/Base/_Layout.cshtml";

    string PathLogo = "/assets/image/logo/logo.png";

    Uri Url = System.Web.HttpContext.Current.Request.Url;

    string UrlLogo = Url.Scheme + "://" + Url.Host + PathLogo;

}

@section CustomSeo{
    @{

        <meta property="og:title" content="@ViewBag.Title" />
        <meta property="og:image" content="@UrlLogo" />
    }
}

<div class="ui grid">
    <div class="ui search row">
        <div class="ui center aligned container">
            <div class="ui input">
                <input type="text" id="inputCar" class="inputCar" placeholder="Digite a placa...">
                <button class="ui button primary button-search">Buscar</button>
            </div>
        </div>
    </div>
</div>

